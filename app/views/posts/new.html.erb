<h1>New post:</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :headline %><br>
    <%= form.text_field :headline, id: 'headline' %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, id: 'description' %>
  </p>

  <p>
    <%= form.submit "Post..." %>
  </p>
<% end %>
